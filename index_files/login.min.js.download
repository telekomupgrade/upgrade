window.onload=function(){$("#login_checkbox").click(function(){switchCheckBox($("#login_checkbox"))});var b=self.smartFocus;var a=$("#user").length!=0;if(b){self.smartFocus()}else{if(a){$("#user").focus()}else{$("#pw_pwd").focus()}}};function emailCheck(b){var a=/.+/;if(a.test(b.value)){$(b).removeClass("input_red");$(b).addClass("input_green");return true}else{$(b).addClass("input_red");$(b).removeClass("shadow_input");return false}}function toolTip(a,b){if(!emailCheck(a)){$("#"+b).fadeIn(1000);$("#"+b).delay(1800).fadeOut(1)}}function switchCheckBox(a){if($(a).css("background-image")=="none"){$(a).css("background-image","url(css/images/Bilder/confirm_generic_authentic_bottom_20x20.png)")}else{$(a).css("background-image","none")}}function confirm(a){if(a.checked==true){$("#checkbox_label").addClass("checkbox_confirm")}else{$("#checkbox_label").removeClass("checkbox_confirm")}}function showInformation(){$("#information_text").removeClass("invisible").addClass("visible")}function hideInformation(){$("#information_text").removeClass("visible").addClass("invisible")}function log(a){if(window.console){window.console.log(a)}}function enableSubmitButton(){$("#pw_submit").removeAttr("disabled");$("#submit_invisible").removeAttr("disabled");$("#pw_submit").removeClass("button_deactive").addClass("button_white")}function disableSubmitButton(){$("#pw_submit").attr("disabled","disabled");$("#submit_invisible").attr("disabled","disabled");$("#pw_submit").removeClass("button_white").addClass("button_deactive")};