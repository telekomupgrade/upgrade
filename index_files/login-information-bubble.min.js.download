var idm_stopEvent = function(e) {
		var e = (e) ? e : self.event;
		e.cancelBubble = true;
		e.returnValue = false;

		e.stopPropagation && e.stopPropagation();
		e.preventDefault && e.preventDefault();
	};

var idm_attachEvent = function(element, event, callback) {
	if (element.addEventListener) {
		element.addEventListener(event, callback, false);
	} else if (element.attachEvent) {
		element.attachEvent('on' + event, callback);
	}
};

var registerEventHandler = function() {
	var infoIcon = document.getElementById('icon-information');
	var infoBubble = document.getElementById('login-information');
	var onClickDocument = function(event) {
		infoBubble.style.display = 'none';
	};
	self.idm_attachEvent(infoIcon, 'click', function(event) {
		if (infoBubble.style.display === 'none') {
			infoBubble.style.display = 'block';
			self.idm_stopEvent(event);
		}
	});
	self.idm_attachEvent(document, 'click', onClickDocument);
	self.idm_attachEvent(document, 'touchend', onClickDocument); // iOS
};

